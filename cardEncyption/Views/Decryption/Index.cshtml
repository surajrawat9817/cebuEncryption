@{
    ViewData["Title"] = "Decryption";
}

<h2>Decryption</h2>

<form asp-action="DecryptText" method="post">
    <div class="form-group">
        <label for="encryptedText">Enter Encrypted Text:</label>
        <input type="text" class="form-control" id="encryptedText" name="encryptedText" required />
    </div>

    <div class="form-group mt-3">
        <label for="secretKey">Enter Secret Key (optional):</label>
        <input type="text" class="form-control" id="secretKey" name="secretKey" placeholder="Leave blank to use default key" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Decrypt</button>
</form>

@if (ViewData["DecryptedText"] != null)
{
    <h3>Decrypted Text</h3>
    <div class="form-group">
        <label for="decryptedText">Decrypted Text</label>
        <input type="text" class="form-control" id="decryptedText" value="@ViewData["DecryptedText"]" readonly />
    </div>
}
